@model MagicTournament.ViewModel.IndexVM

@{
    ViewData["Title"] = "Teste";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Search for a Card</h2>

<h4>IndexVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Teste">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
        <img id="cardImage" />
    </div>
</div>
<h3>@ViewData["Message"]</h3>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var erro = '@TempData["Erro"]';
        var url = '@TempData["URL"]';

        if (erro == '') {
           $('#cardImage').attr('src',url.replace("amp;",""));
        } else {
            alert(erro);
        }
    });
</script>
