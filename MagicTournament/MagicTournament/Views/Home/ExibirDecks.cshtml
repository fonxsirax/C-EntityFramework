@model MagicTournament.ViewModel.LoginVMcs
@{
    ViewData["Title"] = "ExibirDecks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ExibirDecks</h2>

<div class="container" id="tabela">
    <forms asp-action="ExibirDecks">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-dark table-responsive">
            <thead>
                <tr>
                    <td>Titulo</td>
                    <td>Formato</td>
                </tr>
            </thead>
            @foreach (var item in Model.decks)
                {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Formato</td>
            </tr>
                }
        </table>
    </forms>
</div>
