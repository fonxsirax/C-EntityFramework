@model MagicTournament.ViewModel.CreateDeckVM

@{
    ViewData["Title"] = "CreateDeck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateDeck</h2>

<h4>CreateDeckVM</h4>
<hr />
<div class="row">
    <form asp-action="CreateDeck">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Deckname" class="control-label"></label>
                <input asp-for="Deckname" class="form-control" />
                <span asp-validation-for="Deckname" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Formato" class="control-label"></label>
                <select asp-for="Formato" class="form-control">
                    <option>Legacy</option>
                    <option>Modern</option>
                    <option>Commander</option>
                    <option>Tribal</option>
                </select>
                <span asp-validation-for="Formato" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Cards" class="control-label"></label>
                <textarea asp-for="Cards" class="form-control" rows="8"> </textarea>
                <span asp-validation-for="Cards" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
    </form>
</div>
<h3>@ViewData["Message"]</h3>
<div>
    <a class="btn btn-default" href="/Home/ExibirDecks">Voltar para lista</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
